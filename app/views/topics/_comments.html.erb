<div class="topic-text">
  <h4>コメント一覧</h4>
  <% topic.comments.each do |c| %>
    <div>
      <%= c.content %>
    </div>
    <br />
  <% end %>
  <% if logged_in? %>
    <%= form_with model: topic.comments.new, url: topic_comments_path(topic.id) do |f| %>
      <%= button_tag type: "submit", class: "btn btn-success float-right mt-1" do %>
        <i class="far fa-comments"></i>コメントする
      <% end %>
    <% end %>
  <% end %>
</div>